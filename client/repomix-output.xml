                            <button
                                onClick={() => setShowCreateModal(false)}
                                className="px-4 py-2 text-gray-600  hover:text-gray-700 "
                            >
                                Cancel
                            </button>
                            <button
                                onClick={handleCreateProject}
                                className="px-4 py-2 bg-gray-300 text-black rounded-lg hover:bg-gray-200"
                            >
                                Create Project
                            </button>
                        </div>
                    </div>
                </Modal>
            )}
        </div>
    );
}
